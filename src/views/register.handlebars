<section class="d-flex">
    <article class="d-flex flex-column align-items-center w-50">
        <h3 class="p-2">Registrar usuario</h3>
        <form class="d-flex flex-column">
            <label for="name">Name:</label>
            <input class="m-2" type="text" name="name" id="name">
            <label for="email">Email:</label>
            <input class="m-2" type="text" id="email" name="email">
            <label for="password">Password:</label>
            <input class="m-2" type="password" id="password" name="password">
            <label for="photo">Img(url):</label>
            <input class="m-2" type="text" name="photo" id="photo">
            <input class="m-2" type="button" value="Register" id="newUser">
        </form>
    </article>
    <article class="d-flex flex-column w-50 ">
        <h2 class="text-center">Usuarios registrados</h2>
        <div class="d-flex flex-wrap justify-content-center">
            {{#each users}}
                <div class="card m-3 align-items-center" style="width: 20rem;">
                    <p class="card-text text-center">ID:{{this.id}}</p>
                    <h5 class="card-title text-center">{{this.name}}</h5>
                    <p class="card-text text-center">{{this.email}}</p>
                </div>
        {{/each}}
        </div>

    </article>
</section>