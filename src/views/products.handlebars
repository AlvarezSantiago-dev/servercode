<h1 class="text-center">Products</h1>
<div class="d-flex flex-row justify-content-lg-between flex-wrap">
{{#each products}}
    <div class="card p-4 flex-fill m-3" style="width: 20rem;">
        <img src="{{photo}}" class="card-img-top" alt="Product Image">
        <div class="card-body bg-secondary">
            <h5 class="card-title" style="width: 16rem;">{{tittle}}</h5>
            <div class="card d-flex ">
                <a href="/products/{{_id}}" class="btn btn-danger">Detalles</a>
            </div>
            
        </div>
    </div>
{{/each}}

</div>
<div class="d-flex justify-content-center">
    <a href="/" class="btn btn-danger p-3 mb-3">Volver</a>
</div>
